// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                    String    @id @default(cuid())
  name                  String?
  email                 String?   @unique
  emailVerified         DateTime?
  image                 String?
  password              String?
  phone                 String?
  refreshToken          String?
  resetPasswordToken    String?
  resetPasswordExpires  DateTime?
  // Configuraciones de notificaciones
  notifyEmail           Boolean   @default(true)
  notifyPush            Boolean   @default(false)
  notifySms             Boolean   @default(false)
  notifyMarketing       Boolean   @default(true)
  // Configuraciones de privacidad
  profilePublic         Boolean   @default(false)
  showPurchases         Boolean   @default(false)
  allowMessages         Boolean   @default(true)
  cart                  Json?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @default(now()) @updatedAt
  accounts              Account[]
  sessions              Session[]
  orders                Order[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Modelo de pedidos/ordenes
model Order {
  id                String          @id @default(cuid())
  orderNumber       String          @unique
  userId            String
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Información del cliente
  customerName      String
  customerEmail     String
  customerPhone     String

  // Información de envío
  shippingAddress   String
  shippingCity      String
  shippingState     String
  shippingPostalCode String
  shippingReferences String?

  // Totales
  subtotal          Float
  shippingCost      Float
  total             Float

  // Items del pedido (guardado como JSON)
  items             Json

  // Estado del pedido
  status            OrderStatus     @default(PENDING)

  // Relaciones
  payments          Payment[]

  // Timestamps
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
}

// Modelo de pagos
model Payment {
  id                String          @id @default(cuid())
  orderId           String
  order             Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)

  // Detalles del pago
  amount            Float
  paymentMethod     PaymentMethod
  status            PaymentStatus   @default(PENDING)

  // Información de la transacción
  transactionId     String?         @unique
  referenceNumber   String          @unique

  // Metadatos específicos del método de pago
  paymentMetadata   Json?

  // Información de procesamiento
  processedAt       DateTime?
  processedBy       String?         // Usuario que procesó el pago (admin)

  // Notas adicionales
  notes             String?

  // Timestamps
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
}

// Estados del pedido
enum OrderStatus {
  PENDING           // Esperando pago
  PAYMENT_CONFIRMED // Pago confirmado
  PROCESSING        // En proceso
  SHIPPED           // Enviado
  DELIVERED         // Entregado
  CANCELLED         // Cancelado
  REFUNDED          // Reembolsado
}

// Métodos de pago disponibles
enum PaymentMethod {
  BANK_TRANSFER     // Transferencia bancaria
  CASH_DEPOSIT      // Depósito en efectivo
  PHONE_PAYMENT     // Pago telefónico
  STORE_PAYMENT     // Pago en tienda
}

// Estados del pago
enum PaymentStatus {
  PENDING           // Pendiente
  PROCESSING        // En proceso de verificación
  COMPLETED         // Completado
  FAILED            // Fallido
  REFUNDED          // Reembolsado
  CANCELLED         // Cancelado
}
