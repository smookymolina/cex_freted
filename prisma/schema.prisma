generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                   String    @id @default(cuid())
  name                 String?
  email                String?   @unique
  emailVerified        DateTime?
  image                String?
  password             String?
  phone                String?
  refreshToken         String?
  resetPasswordToken   String?
  resetPasswordExpires DateTime?
  role                 Role      @default(COMPRADOR)
  notifyEmail          Boolean   @default(true)
  notifyPush           Boolean   @default(false)
  notifySms            Boolean   @default(false)
  notifyMarketing      Boolean   @default(true)
  profilePublic        Boolean   @default(false)
  showPurchases        Boolean   @default(false)
  allowMessages        Boolean   @default(true)
  cart                 Json?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @default(now()) @updatedAt
  accounts             Account[]
  orders               Order[]
  sessions             Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Order {
  id                   String               @id @default(cuid())
  orderNumber          String               @unique
  userId               String
  customerName         String
  customerEmail        String
  customerPhone        String
  shippingAddress      String
  shippingCity         String
  shippingState        String
  shippingPostalCode   String
  shippingReferences   String?
  subtotal             Float
  shippingCost         Float
  total                Float
  items                Json
  status               OrderStatus          @default(PENDING)
  paymentReleaseStatus PaymentReleaseStatus @default(WAITING_SUPPORT)
  paymentReleaseNotes  String?
  paymentReleaseBy     String?
  paymentReleaseAt     DateTime?
  orderReleaseData     Json?
  trackingStatus       TrackingStatus       @default(ORDER_RECEIVED)
  trackingHistory      Json?
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  supportNotes         String?
  user                 User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  payments             Payment[]
}

model Payment {
  id                    String        @id @default(cuid())
  orderId               String
  amount                Float
  paymentMethod         PaymentMethod
  status                PaymentStatus @default(PENDING)
  transactionId         String?       @unique
  referenceNumber       String        @unique
  paymentMetadata       Json?
  paymentProof          String?
  paymentProofUploadedAt DateTime?
  paymentProofVerified  Boolean       @default(false)
  paymentProofVerifiedAt DateTime?
  paymentProofVerifiedBy String?
  processedAt           DateTime?
  processedBy           String?
  notes                 String?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  order                 Order         @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

enum OrderStatus {
  PENDING
  PAYMENT_CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum PaymentMethod {
  BANK_TRANSFER
  CASH_DEPOSIT
  PHONE_PAYMENT
  STORE_PAYMENT
  CONVENIENCE_STORE
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

enum PaymentReleaseStatus {
  WAITING_SUPPORT
  CALL_SCHEDULED
  RELEASED_TO_CUSTOMER
  ON_HOLD
}

enum Role {
  COMPRADOR
  SOPORTE
}

enum TrackingStatus {
  ORDER_RECEIVED
  PAYMENT_VERIFICATION
  PREPARING_ORDER
  IN_TRANSIT
  DELIVERED
}
